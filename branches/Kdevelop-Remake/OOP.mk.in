# $Id: OOP.mk.in,v 1.13.2.3 2007-06-06 20:28:57 phil Exp $
#

-include @PZ_DIR@/PZ_user.mk
CXXFLAGS = @USING_MPI@ @USING_MPE@ $(PZ_CXXFLAGS) @USING_LOG4CXX@ -DMPICH_IGNORE_CXX_SEEK -DBLOCKING -DMTSEND
INCLUDES = -I$(top_srcdir)/Sources @MPIINCLUDE@ $(PZ_INCLUDES) @MPEINCLUDE@ @LOG4CXX_INCLUDE@
LDFLAGS = -L$(top_builddir)/lib $(PZ_LIBDIR) @MPILIBDIR@ @MPELIBDIR@ @LOG4CXX_LIBDIR@
LDADD =  -loopar $(PZ_LIB) -lpthread @MPILIB@ @MPELIB@ @LOG4CXX_LIB@

